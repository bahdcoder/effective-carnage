{
	"name": "betting-platform",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "tsx watch core/server/ignite.ts",
		"build": "npm run build:core && npm run build:client && npm run build:server",
		"build:core": "tsc",
		"build:client": "vite build --outDir build/entry/client",
		"build:server": "vite build --ssr core/entry/server.tsx --outDir build/entry/server",
		"preview": "cross-env NODE_ENV=production node build/server/ignite.js",
		"checks:types": "tsc --noEmit",
		"checks:format": "biome format",
		"format": "biome format --write .",
    "checks:lint": "biome lint --error-on-warnings ."
	},
	"dependencies": {
		"@biomejs/biome": "^1.9.4",
		"compression": "^1.8.0",
		"express": "^5.0.1",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"sirv": "^3.0.1"
	},
	"devDependencies": {
		"@types/compression": "^1.7.5",
		"@types/express": "^5.0.0",
		"@types/node": "^22.13.4",
		"@types/react": "^19.0.10",
		"@types/react-dom": "^19.0.4",
		"@vitejs/plugin-react": "^4.3.4",
		"cross-env": "^7.0.3",
		"tsx": "^4.19.3",
		"typescript": "~5.7.3",
		"vite": "^6.1.1"
	}
}
