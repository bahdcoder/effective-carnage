{
	"name": "betting-platform",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "env-cmd -f .env tsx watch core/server/dev.ts",
		"build": "npm run build:core && npm run build:client && npm run build:server",
		"build:core": "tsc",
		"build:client": "vite build --outDir build/entry/client",
		"build:server": "vite build --ssr core/entry/server.tsx --outDir build/entry/server",
		"preview": "cross-env NODE_ENV=production node build/server/prod.js",
		"checks:types": "tsc --noEmit",
		"checks:format": "biome format",
		"format": "biome format --write .",
		"prisma:generate": "prisma generate",
		"cli": "tsx core/cli/run.ts",
		"checks:lint": "biome lint --error-on-warnings .",
		"test": "vitest",
		"test:coverage": "vitest --run --coverage"
	},
	"dependencies": {
		"@biomejs/biome": "^1.9.4",
		"@drizzle-team/brocli": "^0.11.0",
		"@prisma/client": "^6.6.0",
		"@radix-ui/react-context": "^1.1.2",
		"@tailwindcss/vite": "^4.1.4",
		"awilix": "^12.0.5",
		"awilix-express": "^9.0.2",
		"bcryptjs": "^3.0.2",
		"compression": "^1.8.0",
		"cookie-session": "^2.1.0",
		"cors": "^2.8.5",
		"env-cmd": "^10.1.0",
		"envalid": "^8.0.0",
		"express": "^5.0.1",
		"express-rate-limit": "^7.5.0",
		"helmet": "^8.1.0",
		"http-status-codes": "^2.3.0",
		"inversify": "^7.0.0-alpha.5",
		"pino": "^9.6.0",
		"pino-pretty": "^13.0.0",
		"rate-limit-redis": "^4.2.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"redis": "^4.7.0",
		"sirv": "^3.0.1",
		"tailwindcss": "^4.1.4",
		"zod": "^3.24.3"
	},
	"devDependencies": {
		"@types/compression": "^1.7.5",
		"@types/cookie-session": "^2.0.49",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/node": "^22.13.4",
		"@types/react": "^19.0.10",
		"@types/react-dom": "^19.0.4",
		"@types/supertest": "^6.0.3",
		"@vitejs/plugin-react": "^4.3.4",
		"@vitest/coverage-v8": "^3.1.2",
		"cross-env": "^7.0.3",
		"prisma": "^6.6.0",
		"supertest": "^7.1.0",
		"tsx": "^4.19.3",
		"typescript": "~5.7.3",
		"vite": "^6.1.1",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.1.2"
	}
}
